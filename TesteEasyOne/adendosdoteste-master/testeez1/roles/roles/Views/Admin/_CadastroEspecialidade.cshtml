@{
    ViewBag.Title = "_CadastroEspecialidade";
}

@model roles.Models.EspecialidadeModel


<div class="modal-content">
    <div class="modal-header">
        @*<button type="button" class="close" data-dismiss="modal">X</button>*@

        <h3>Cadastro de Pacientes</h3>
    </div>
    <div class="modal-body olar">



        @*@*model.Nome (Nome = id da textbox)*@
        @using (Html.BeginForm("CadastrarEspecialidade", "Admin", FormMethod.Post)) {
            @*@Html.HiddenFor(model => model.Id)*@
            @Html.LabelFor(model => model.Nome) <br />
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" }) <br /><br />
            @Html.LabelFor(model => model.Descricao) <br />
            @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control" }) <br /><br />
            <br /><br />
            <input type="submit" value="Cadastrar Especialidade" class="btn btn-success justify-content-center" id="btnCadastrarEspecialidade" />

            @*<div class="row justify-content-center">
                    <input type="submit" value="Cadastrar Paciente" class="btn btn-success justify-content-center" name="btnCadastrarPaciente" />

                </div>*@
        }

    </div>


    <div class="modal-footer">

    </div>

</div>
